                { "type": "text", "text": "1. " },
                { "type": "bold", "text": "Suivi annuel" },
                { "type": "text", "text": " pour prévenir les " },
                { "type": "bold", "text": "cancers" },
                { "type": "text", "text": " (sein, ovaire) et l'" },
                { "type": "bold", "text": "ostéoporose" },
