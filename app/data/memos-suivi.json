              [
                { "type": "text", "text": "3. Comptage des follicules antraux par " },
                { "type": "bold", "text": "ÉCHOGRAPHIE" },
                { "type": "text", "text": "." }
              ],
              [
                { "type": "text", "text": "4. " },
                { "type": "bold", "text": "HYSTÉROGRAPHIE" },
                { "type": "text", "text": " (évalue la perméabilité des trompes)." }
              ]
            ]
